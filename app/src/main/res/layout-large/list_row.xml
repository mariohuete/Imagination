<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_row_selector">

    <ImageView
        android:layout_width="@dimen/image_large"
        android:layout_height="@dimen/image_large"
        android:id="@+id/thumbnail"
        android:src="@drawable/holder"
        android:paddingLeft="@dimen/padding_side"
        android:paddingStart="@dimen/padding_side"
        android:paddingRight="@dimen/inset"
        android:paddingEnd="@dimen/inset"
        android:contentDescription="@string/artist_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:layout_alignTop="@+id/thumbnail"
        android:paddingTop="@dimen/padding_side"
        android:paddingLeft="@dimen/padding_side"
        android:paddingRight="@dimen/inset"
        android:paddingEnd="@dimen/inset"
        android:maxLines="2"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@color/imagination"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genre"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_toLeftOf="@+id/arrow"
        android:layout_toStartOf="@+id/arrow"
        android:paddingBottom="@dimen/padding_bottom"
        android:paddingLeft="@dimen/padding_side_large"
        android:paddingRight="@dimen/inset"
        android:paddingEnd="@dimen/inset"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic"
        android:textColor="@color/imagination_bg"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:src="@drawable/arrow"
        android:id="@+id/arrow"
        android:contentDescription="@string/arrow_desc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/padding_side"
        android:paddingEnd="@dimen/padding_side"
        android:paddingLeft="@dimen/padding_side_large"
        android:paddingStart="@dimen/padding_side_large"/>

</RelativeLayout>